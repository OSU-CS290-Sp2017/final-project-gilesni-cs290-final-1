<div id="empty-space" class="hidden"></div>
<div id="login-modal" class="hidden">
    <div class="modal-dialog">

        <div class="modal-header">
            <h1>Login</h1>
            <button type="button" class="modal-close-button">&times;</button>
        </div>
        <div class="modal-body">
            <div class="login-input-element">
                <label for="login-account-input">Account</label>
                <input type="text" id="login-account-input">
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="modal-cancel-button">Cancel</button>
            <button type="button" class="modal-login-button">Accept</button>
        </div>
    </div>
</div>